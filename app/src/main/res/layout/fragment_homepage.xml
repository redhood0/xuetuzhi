<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_homepage_graybg4edittext"
        android:layout_width="346dp"
        android:layout_height="33dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:background="@color/editTextBgGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ImageView
        android:id="@+id/iv_homepage_search_loge"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/search_logo"
        app:layout_constraintBottom_toBottomOf="@+id/view_homepage_graybg4edittext"
        app:layout_constraintLeft_toLeftOf="@+id/view_homepage_graybg4edittext"
        app:layout_constraintTop_toTopOf="@+id/view_homepage_graybg4edittext" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:background="@color/editTextBgGray"
        android:hint="输入您要搜索的内容"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_homepage_graybg4edittext"
        app:layout_constraintLeft_toRightOf="@+id/iv_homepage_search_loge"
        app:layout_constraintTop_toTopOf="@+id/view_homepage_graybg4edittext" />

    <ImageView
        android:layout_width="346dp"
        android:layout_height="157dp"
        android:src="@mipmap/adv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_homepage_graybg4edittext"
        android:layout_marginTop="13dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>